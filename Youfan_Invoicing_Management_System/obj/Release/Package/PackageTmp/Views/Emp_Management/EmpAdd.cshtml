<script src="~/Scripts/jquery-3.5.1.js"></script>
<script type="text/javascript">
    var userName = "";
    layui.config({
        base: '/step/step-lay/'
    }).use(['form', 'step'], function () {
        var $ = layui.$
            , form = layui.form
            , step = layui.step;

        step.render({
            elem: '#stepForm',
            filter: 'stepForm',
            width: '100%', //设置容器宽度
            stepWidth: '600px',
            height: '500px',
            stepItems: [{
                title: '添加员工信息'
            }, {
                title: '分配权限'
            }, {
                title: '完成'
            }]
        });



        form.on('submit(AddEmp)', function (data) {
            var EmpInfo = data.field;
            userName = data.field.username;
            step.next('#stepForm');
                 //异步提交
                $.ajax({
                    type: "POST",
                    data: {
                        EmpInfo: EmpInfo
                        },
                    url: "@Url.Action("EmpAdd")",
                    success: function (result) {
                        if (result.Success) {
                            layer.msg(result.Message, {
                                icon: 1
                            });
                            step.next('#stepForm');
                            return false;
                        }
                        else {
                            layer.msg(result.Message, {
                                icon: 5,
                                time: 1500
                            });
                            return false;
                    }
                }
                })
            return false;
        });
        form.on('submit(formStep2)', function (data) {
            step.next('#stepForm');
            return false;
        });

        $('.next').click(function () {
            step.next('#stepForm');
            location.reload();
        });
    })

    layui.extend({
        dtree: '{/}/Content/assets/dtree/dtree'   // {/}的意思即代表采用自有路径，即不跟随 base 路径
