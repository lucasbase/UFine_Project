@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>采购单详情</title>
    <link href="~/Content/assets/css/layui.css" rel="stylesheet" />
    <style>
        .layui-table-cell .layui-form-checkbox[lay-skin="primary"] {
            transform: translateY(20%);
        }

        .layui-table-box.layui-table-header.layui-table {
            text-align: center
        }
        /*设置数据表表头字体*/
        .layui-table th {
            /*表头内容居中显示*/
            text-align: center;
        }
    </style>
</head>
<body>
    <div>
        <table class="layui-table">
            <tr>
                <td><strong>采购单号</strong></td>
                <td>@ViewBag.Order_ID</td>
                <td><strong>入库单号</strong></td>
                <td>@ViewBag.OutIn_Number</td>
                <td><strong>状态</strong></td>
                @if (@ViewBag.Order_State == "已审核")
                {
                    <td style="color:green">@ViewBag.Order_State</td>
                }
                else
                {
                    <td style="color:red">@ViewBag.Order_State</td>
                }
            </tr>
            <tr>
                <td><strong>订单创建人</strong></td>
                <td>@ViewBag.Creater</td>
                <td><strong>创建时间</strong></td>
                <td>@ViewBag.Create_Time</td>
                <td><strong>订单审核人</strong></td>
                <td>@ViewBag.Checker</td>
            </tr>
            <tr>
                @if (ViewBag.Supplier_ID == null)
                {
                    <td><strong>供应商编号</strong></td>
                    <td></td>
                    <td><strong>供应商名称</strong></td>
                    <td></td>
                    <td><strong>联系人</strong></td>
                    <td></td>
                }
                else
                {
                    <td><strong>供应商编号</strong></td>
                    <td>@ViewBag.Supplier_ID</td>
                    <td><strong>供应商名称</strong></td>
                    <td>@ViewBag.Supplier_Name</td>
                    <td><strong>联系人</strong></td>
                    <td>@ViewBag.Contact</td>
                }
            </tr>
        </table>
        <table class="layui-table" id="tabInfo">
            <thead>
                <tr>
                    <th>产品名称</th>
                    <th>产品编号</th>
                    <th>单价</th>
                    <th>总价</th>
                    <th>规格</th>
                    <th>入库数</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@ViewBag.Product_Name</td>
                    <td>@ViewBag.Product_ID</td>
                    <td>@ViewBag.Unit_Price 元</td>
                    <td>@ViewBag.Total_Price 元</td>
                    <td>@ViewBag.Unit</td>
                    <td>@ViewBag.Total_Num</td>
                </tr>
            </tbody>
        </table>
    </div>
</body>
</html>
